<p id="notice"><%= notice %></p>

<h1>Facilitators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpf</th>
      <th>Institution</th>
      <th>Coaching activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilitators.each do |facilitator| %>
      <tr>
        <td><%= facilitator.name %></td>
        <td><%= facilitator.cpf %></td>
        <td><%= facilitator.institution %></td>
        <td><%= facilitator.coaching_activities %></td>
        <td><%= link_to 'Show', institution_coaching_activity_facilitator_path(@institution, @coaching_activity, facilitator) %></td>
        <td><%= link_to 'Edit', edit_institution_coaching_activity_facilitator_path(@institution, @coaching_activity, facilitator) %></td>
        <td><%= link_to 'Destroy', institution_coaching_activity_facilitator_path(@institution, @coaching_activity, facilitator), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facilitator', new_institution_coaching_activity_facilitator_path(@institution, @coaching_activity) %>
<%= link_to 'Back', institution_coaching_activities_path(@institution, @coaching_activity) %>
